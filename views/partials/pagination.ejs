<%if(totalPages > 1) { %>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item <%= !hasPrevPage ? 'disable' : '' %>">
                <a href="/products?page=<%= prevPage %>" class="page-link">Previous</a>
            </li>

            <!-- display the page number logic-->
            <% for(let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a href="/products?page=<%= i %>" class="page-link">
                        <%= i %>
                    </a>
                </li>
                <% } %>
                    <li class="page-item <%= !hasNextPage ? 'disable' : '' %>">
                        <a href="/products?page=<%= nextPage %>" class="page-link">Next</a>
                    </li>
        </ul>
    </nav>
    <% } %>