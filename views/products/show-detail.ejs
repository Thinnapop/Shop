<%- include('../partials/header') %>

    <div class="card shadow-sm">

        <div class="row g-0">
            <div class="col-md-4">
                <%  if (product.imageUrl){%>
                    <img src="/<%=product.imageUrl%>" class="img-fluid rounded" alt="<%= product.name%>" width="200">
                    <% }else { %>
                        <img src="https://via.placeholder.com/400" class="img-fluid rounded" alt="">
                        <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h1 class="card-title display-5">
                        <%= product.name %>
                    </h1>
                    <h2 class="card-subtitle mb-2 text-muted">Price:
                        <%= product.price %> THB
                    </h2>
                    <p class="card-text"> <small class="text-muted"></small>Created At:
                        <%= product.createdAt.toDateString() %>
                            <hr>
                    </p>
                    <a href="/products" class="btn btn-secondary">Back to all products</a>
                    <a href="/products/<%= product._id %>/edit" class="btn btn-warning">Edit this product</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>